{
  "name": "mikayla-fun-app",
  "version": "1.0.0",
  "description": "Electron app with sidebar and browser tab",
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:tsc\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:tsc": "tsc -p tsconfig.node.json --watch",
    "dev:electron": "wait-on dist/main/main.js http://localhost:5173 && electron .",
    "build": "npm run build:tsc && npm run build:vite",
    "build:tsc": "tsc -p tsconfig.node.json",
    "build:vite": "vite build",
    "start": "electron .",
    "clean": "rimraf dist"
  },
  "keywords": ["electron", "typescript"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}

